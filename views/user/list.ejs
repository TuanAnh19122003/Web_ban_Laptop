<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh Sách Người Dùng</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            margin-top: 20px;
        }
        .user-card {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header-row mb-3">
            <h1 class="my-4">Danh Sách Người Dùng</h1>
            <a href="/users/create" class="btn btn-success">Thêm</a>
        </div>
        <table class="table table-bordered table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Tên tài khoản</th>
                    <th>Email</th>
                    <th>Địa chỉ</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function(user) { %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.address %></td>
                        <td>
                            <a href="/users/edit/<%= user._id %>" class="btn btn-warning btn-sm btn-action">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <a href="/users/delete/<%= user._id %>" class="btn btn-danger btn-sm btn-action">
                                <i class="fas fa-trash-alt"></i> Xóa
                            </a>
                            <a href="/users/details/<%= user._id %>" class="btn btn-info btn-sm btn-action">
                                <i class="fas fa-eye"></i> Xem
                            </a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
